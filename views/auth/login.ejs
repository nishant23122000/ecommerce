
<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/login.css">

	<link rel="stylesheet" type="text/css" href="/css/util.css">
	

<%- include('../includes/nav.ejs') %>
        <div class="limiter">
          <div class="container-login100">
            <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
              <%if(errorMsg.length){%>
                <div style="color:#234E70;" class=" alert alert-warning alert-dismissible fade show" role="alert">
                  <strong><%=errorMsg%></strong>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
              </div>
               
                
                <%}%>
              <form action="/login" method="POST" class="login100-form validate-form flex-sb flex-w">
                <span class="login100-form-title p-b-32">
                  Account Login
                </span>
      
                <span class="txt1 p-b-11 <%= validationError.find(e=>e.param==='email') ? 'color' : ''%>">
                  Email
                </span>
                <div class="wrap-input100 validate-input m-b-36">
                  <input 
                  class="input100 <%= validationError.find(e=>e.param==='email') ? 'invalid' : ''%>" 
                  value="<%=oldInput.email%>" 
                  type="text" 
                  name="email" >
                  <span class="focus-input100"></span>
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken%>">
                <span class="txt1 p-b-11 <%= validationError.find(e=>e.param==='password') ? 'color' : ''%>">
                  Password
                </span>
                <div class="wrap-input100 validate-input m-b-12">
                  <span class="btn-show-pass">
                    <i class="fa fa-eye"></i>
                  </span>
                  <input
                   class="input100 <%= validationError.find(e=>e.param==='password') ? 'invalid' : ''%>" 
                   value="<%=oldInput.password%>" 
                   type="password" 
                   name="password" >
                  <span class="focus-input100"></span>
                </div>
                <div style="margin-left: 280px;">
                  <a href="/reset" class="txt3">
                    Forgot Password?
                  </a>
                </div>
               
      
                <div class="container-login100-form-btn">
                  <button class="button login100-form-btn">
                    Login
                  </button>
                </div>
                <div style="margin-top: 20px;" class="flex-sb-m w-full p-b-48">
                  <div class="contact100-form-checkbox">

                    <label  >
                      Dont Have a Account <a class='link' href="/signup">register</a>
                    </label>
                  </div>
      
                
                </div>
              </form>
            </div>
          </div>
        </div>
        
      
        <div id="dropDownSelect1"></div>
       
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="js/main.js"></script>

        <%- include('../includes/foot.ejs') %>