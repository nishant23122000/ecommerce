<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
</head>
<body>
<%- include('../includes/nav.ejs') %>


        <%if(products.length) { %>
          <div class="wrap cf">
            <h1 class="projTitle"> Shopping Cart</h1>
            <div class="heading cf">
              <h1>My Cart</h1>
              
            </div>
            <div class="cart">
      
              <ul class="cartWrap">

                <% products.forEach(p=>{ %>
                   
                    
             
                    
                          <li class="items odd">
                            
                        <div class="infoWrap"> 
                            <div class="cartSection">
                            <img src="/<%= p.productId.imageUrl %>" alt="<%= p.productId.imageUrl %>" class="itemImg" />
                              
                              <h3><%= p.productId.title %></h3>
                            
                               <p> <input type="text"  class="qty" placeholder="<%=p.quantity%>"/> x $<%=p.productId.price%></p>
                            
                              <p class="stockStatus"> In Stock</p>
                            </div>  
                        
                            
                            <div class="prodTotal cartSection">
                              <p>$<%=p.quantity*p.productId.price%></p>
                            </div>

                                  <div class="cartSection removeWrap">
                                    <form action="/cart-delete" method="POST">
                                      <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                                      <input type="hidden" name="productId" value="<%=p._id%>">
                                      <input type="hidden" name="price" value="<%=p.quantity*p.productId.price%>">
                                      <button style="background: none; border: none; font-size: 30px; color: red;" class="remove">x</button>
                                      </form>
                               
                            </div>
                          </div>
                          </li>
                         
                          
                               
                          
                          
                          
                        
                     
               <% }) %>
                 
              </ul>
            </div>
            
           
            
            <div class="subtotal cf">
              <ul>

                

                      <li class="totalRow final"><span class="label">Total</span><span class="value">$<%=totalPrice%>.00</span></li>
                <li class="totalRow"><a href="/checkout" style="background-color: #234e70;" class="btn continue">Order Now</a></li>
              </ul>
            </div>
          </div>
           
                
              
                
        <%}else{%>  
          <h4 style="justify-content:center;text-align: center;margin: 50px auto;">Yout Cart is Empty!</h4>       
        <%}%>
      
<%- include('../includes/foot.ejs') %>